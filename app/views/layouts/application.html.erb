    <%= image_tag 'logo.png', alt: 'Logo do Agendamento WhatsApp', style: 'max-width: 25%; display: block; margin: 0 auto; border-radius: 30px; opacity: 0.8;' %>

    <nav>
      <ul class="navbar">
        <li><a href="<%= root_path %>">Home</a></li>
