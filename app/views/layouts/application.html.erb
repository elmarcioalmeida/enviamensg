        <% if user_signed_in? %>
          <li><a href="<%= destroy_user_session_path %>" data-method="delete">Sair</a></li>
          <li><a href="<%= user_root_path %>">Minha Conta</a></li>
        <% else %>
          <li><a href="<%= new_user_session_path %>">Entrar</a></li>
        <% end %>
        <li><a href="<%= site_about_path %>">Sobre NÃ³s</a></li>
        <li><a href="<%= site_contact_path %>">Fale Conosco</a></li>
      </ul>
    </nav>
  </header>

  <%= yield %>

  <footer class="footer">
    <p>&copy; <%= Time.now.year %> AuxiliaJud. Todos os direitos reservados.</p>
  </footer>
</body>
</html>

